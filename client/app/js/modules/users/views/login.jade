.lockscreen(style='height: 100%;')
  #login-box.form-box
    span.pull-right.image(style='margin: 15px 20px; float: left;')
      img.img-circle(gravatar-src='credentials.email',
      gravatar-size='50',
      alt='User Image')
    span.image(style='margin: 5px 15px; float: left;')
      img.img-circle(src='/images/GennieLogok256.png' height='64' width='64')
    .header(translate, style='text-align: center;')
      |GENIE UI
    form(role='form', ng-submit='login()', method='post')
      .body.bg-gray
        .callout.callout-danger(ng-if='loginError')
          p {{loginError.message | translate}}
        formly-form(model='credentials', fields='formlyFields')
      .footer.bg-gray
        button.btn.bg-light-blue.btn-block(translate, type='submit')
          |Sign In
        a.btn.bg-olive.btn-block(translate, href='#/register')
          |Or Register

