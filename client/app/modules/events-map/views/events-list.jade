.list-group( ng-show='clusters.length' style='padding-left:20px' )
  //
    a.list-group-item(ng-click='showAllMarkers()' style='color:#fff')
      i.fa.fa-fw.fa-map-marker
      | &nbsp;Show exact locations
  a.list-group-item(style='color:#fff')
    i.fa.fa-fw.fa-map-marker
    | &nbsp;Click item to highlight an event
  a.list-group-item( ng-repeat='cluster in clusters'
    ng-click='selectCluster(cluster)' ng-class='isSelected(cluster)' )
    span.badge( title='event weight (# of posts or users)') {{ cluster.weight }}
    img( ng-src='{{ cluster.events[0].event_source | sourceIcon }}' )
    span( style='color:#fff;font-size:0.7em' ).
      {{ cluster.start_time }}
      to
      {{ cluster.end_time }}
