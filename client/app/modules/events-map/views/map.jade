image-grid.map-overlay.truncate.hide( image-type='unselected' style='top:45px;left:0'
  map-overlay overlay-action='hide' )

.container-fluid
  .row( dynamic-cols='events'
    before='["col-md-12", "gone"]'
    after='["col-md-10", "col-md-2"]' )
    div( style='padding:15px 0' class='{{colClasses[0]}}' )
      .events-map( events-map heat-map network-graph zoom='5' )
    div( style='padding-left:0' class='{{colClasses[1]}}' )
      events-list( network-graph )

image-grid.map-overlay.truncate.hide( image-type='selected'
  style='bottom:200px;left:0;height:100px;' map-overlay overlay-action='hide'
  after-action='clearImages("selected")' )

.map-overlay( style='bottom:0;left:0' map-overlay overlay-action='shrink' )
  .col-md-4
    time-series( chart_name='time-series' )
  .col-md-4
    canvas#graph( style='height:180px; width:100%;' )
  .col-md-4
    jqcloud( tag-cloud words='tags' delay='10' steps='7' class='events-cloud'
      font-size='{from:0.08, to:0.02}' )
