.container-fluid
  .row
    .col-md-10
    .col-md-2
      button.btn.btn-primary( ng-click='showEvents()' ) Show Events
  .row( class='pad-top-md' )
    .col-md-10
      #map( sandbox-map zoom='9' class='sandbox-map' )
    .col-md-2
      table.table( ng-show='events.length' )
        thead
          tr
            th Date
            th Count
        tbody
          tr( ng-repeat='event in events track by event.id' )
            td {{ event.created_time.min * 1000 | date }}
            td {{ event.count }}
  .row( class='pad-top-md' )
    .col-md-4
    .col-md-4
    .col-md-4
      #graph-container( style='height:100%' )
        canvas#graph( style='width:100%;height:200px' )
